<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F6FA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Malzemelerim"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIngredients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:elevation="2dp"
        android:clipToPadding="false"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnAddIngredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yeni Malzeme Ekle"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/layoutAddOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnScanReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Market Fişi Tarat"
            android:backgroundTint="#FBC02D"
            android:textColor="#222222"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAddManualIngredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fiş Dışı Malzeme Ekle"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout> 
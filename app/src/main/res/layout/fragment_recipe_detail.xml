<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarif Adı"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">
            <TextView
                android:id="@+id/tvReadyInMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hazırlık: 0 dk"
                android:drawableLeft="@drawable/ic_time"
                android:paddingEnd="16dp"/>
            <TextView
                android:id="@+id/tvServings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kişi: 0"
                android:drawableLeft="@drawable/ic_people"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diyet Tipleri"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:paddingTop="8dp"/>
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupDietTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malzemeler"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:paddingTop="8dp"/>
        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Talimatlar"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:paddingTop="8dp"/>
        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eksik Malzemeler"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textStyle="bold"
            android:paddingTop="16dp"/>
        <TextView
            android:id="@+id/tvMissingIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/tvNutrition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Besin Değerleri\n-"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>
    </LinearLayout>
</ScrollView> 
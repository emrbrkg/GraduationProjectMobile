<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarif Ã–nerileri"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnRecipeSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tarif Arama"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:backgroundTint="#E3F2FD"
            android:textColor="#1976D2"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="18dp" />

        <Button
            android:id="@+id/btnRecipesWithMyIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Malzemelerimle Tarifler"
            android:drawableStart="@android:drawable/ic_menu_agenda"
            android:backgroundTint="#E8F5E9"
            android:textColor="#388E3C"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="18dp" />

        <Button
            android:id="@+id/btnFavoriteRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favori Tariflerim"
            android:drawableStart="@android:drawable/btn_star"
            android:backgroundTint="#FFF3E0"
            android:textColor="#F57C00"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="18dp" />

    </LinearLayout>
</ScrollView> 
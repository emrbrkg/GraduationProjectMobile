<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Profil ve Hoşgeldin Mesajı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:background="@android:color/white"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:contentDescription="Profil" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoş geldin!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#222222" />
                <TextView
                    android:id="@+id/tvSubWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bugün ne yapmak istersin?"
                    android:textSize="15sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>

        <!-- Butonlar için CardView benzeri görünüm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnEditDietType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diyet Tipini Düzenle"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:backgroundTint="#E3F2FD"
                android:textColor="#1976D2"
                android:layout_marginBottom="18dp" />

            <Button
                android:id="@+id/btnScanReceipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Market Fişi Tarat"
                android:drawableStart="@android:drawable/ic_menu_camera"
                android:backgroundTint="#FFF3E0"
                android:textColor="#F57C00"
                android:layout_marginBottom="18dp" />

            <Button
                android:id="@+id/btnAddIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiş Dışı Malzeme Ekle"
                android:drawableStart="@android:drawable/ic_input_add"
                android:backgroundTint="#E8F5E9"
                android:textColor="#388E3C"
                android:layout_marginBottom="18dp" />

            <Button
                android:id="@+id/btnMyIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Malzemelerim"
                android:drawableStart="@android:drawable/ic_menu_agenda"
                android:backgroundTint="#F3E5F5"
                android:textColor="#7B1FA2"
                android:layout_marginBottom="18dp" />

            <Button
                android:id="@+id/btnSuggestRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarif Öner"
                android:drawableStart="@android:drawable/ic_menu_compass"
                android:backgroundTint="#FFFDE7"
                android:textColor="#FBC02D"
                android:layout_marginBottom="18dp" />

            <Button
                android:id="@+id/btnFavoriteRecipes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favori Tariflerim"
                android:drawableStart="@android:drawable/btn_star"
                android:backgroundTint="#FFF8E1"
                android:textColor="#FFA000"
                android:layout_marginBottom="18dp" />

            <Button
                android:id="@+id/btnUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kullanıcı Bilgilerini Güncelle"
                android:drawableStart="@android:drawable/ic_menu_manage"
                android:backgroundTint="#FFECB3"
                android:textColor="#FF9800"
                android:layout_marginBottom="18dp" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Çıkış Yap"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView> 